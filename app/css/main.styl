marron = #7d6350

@font-face {
	font-family: 'Heldustry';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/HeldustryFT_Regular.ttf') format('truetype');
}

@font-face {
	font-family: 'mangal';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/mangal.ttf') format('truetype');
}

@font-face {
	font-family: 'mangalb';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/mangalb.ttf') format('truetype');
}

@font-face {
	font-family: 'Pacifico';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/Pacifico.ttf') format('truetype');
}

@font-face {
	font-family: 'Remachine';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/RemachineScript.ttf') format('truetype');
}


footer
	background marron
	color white
	padding 0.2em 0
	text-align center
	width 100%
	h3
		font-size 14px
		font-weight normal
		strong
			display block

header
	
	.logo
		margin-top 1.1em
		img
			display block
			margin auto
			width 190px
	.spacer		
		background marron
		display block
		height 1.5px
		margin 1em auto auto auto
		width 90%

.content
	.about
		color rgba(black,0.4)
		font-family "mangal"
		margin-left 1em
		margin-right 1em
		text-align center
		h3
			color marron
			font-family "Pacifico"
	.banner
		margin-top 1em
		position relative
		
		img
			width 100%
		.text
			font-family "Remachine"
			font-size 3em
			left 10%
			margin auto
			overflow hidden
			position absolute
			top 15%		
			width 80%
			p
				color white
				text-align center					
				text-shadow 2px 2px 10px rgba(black,0.8)

	.main-banner
		margin-top 1em
		overflow hidden
		img
			width 100%
			

					

nav
	position relative
	visibility hidden
	.menu
		position absolute

.simple-menu
	visibility hidden
	position absolute
	margin-left 2 em
.nav-mobile
	display none
		

@media screen and (max-width:320px )
	.content
		.banner
			.text
				top 5%
				font-size 1.5em	

@media screen and (max-width:420px ) and (min-width:320px ) 
	.content
		.banner
			.text
				top 20
				font-size 1.5em

@media screen and (max-width:767px )
	.simple-menu
		visibility visible	
	.nav-mobile
		visibility visible	
	.content
		.main-banner
			margin-top 1em
			overflow hidden
			img
				width 200%
	

@media screen and (min-width: 768px)

	nav
		position relative
		visibility visible		
		.menu
			display block
			position absolute
			width 100%
			.menuIzquierda
			.menuDerecha		
				display inline-block
				padding 0
				position absolute
				width 40em				
				li				
					display inline-block
					a
						color marron
						font-size 1.2em
						text-decoration none
			.menuIzquierda
				font-family "Heldustry"
				margin-left 0
				margin-right 4em
				right 0
				text-align right
				li					
					&:nth-child(even)
						margin-left 2em
			.menuDerecha
				font-family "Heldustry"
				margin-left 4em
				margin-right 0
				text-align left
				li					
					&:nth-child(odd)
						margin-right 2em


	.content
		position relative
		
		.about
			background white
			bottom -30px
			font-size 0.8em
			left 10%
			margin auto
			overflow hidden
			padding-bottom 0
			position absolute
			width 80%

	footer
		margin-top 2em

@media screen and (min-width: 1024px)

	nav		
		.menu			
			.menuIzquierda
				margin-right 6em
				li					
					&:nth-child(even)
						margin-left 5em
			.menuDerecha
				margin-left 6em
				li					
					&:nth-child(odd)
						margin-right 5em

@media screen and (min-width: 1280px)

	nav		
		.menu			
			.menuIzquierda
				margin-right 8em
				li					
					&:nth-child(even)
						margin-left 7.5em
			.menuDerecha
				margin-left 8em
				li					
					&:nth-child(odd)
						margin-right 7.5em

@media screen and (min-width: 1440px)

	nav		
		.menu			
			.menuIzquierda
				margin-right 8em
				li					
					&:nth-child(even)
						margin-left 10em
			.menuDerecha
				margin-left 8em
				li					
					&:nth-child(odd)
						margin-right 10em
