marron = #7d6350

@font-face {
	font-family: 'Heldustry';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/HeldustryFT_Regular.ttf') format('truetype');
}

@font-face {
	font-family: 'mangal';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/mangal.ttf') format('truetype');
}

@font-face {
	font-family: 'mangalb';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/mangalb.ttf') format('truetype');
}

@font-face {
	font-family: 'Pacifico';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/Pacifico.ttf') format('truetype');
}

@font-face {
	font-family: 'Remachine';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/RemachineScript.ttf') format('truetype');
}

body
	position absolute
	top 0
	bottom 0 
	right 0 
	left 0	

footer
	margin-top 150px
	position fixed
	right 0
	bottom 0
	background marron
	height 40px
	color white
	padding 0.2em 0
	text-align center
	width 100%
	h3
		font-size 14px
		font-weight normal
		strong
			display block

header
	
	.logo
		margin-top 1.1em
		img
			display block
			margin auto
			width 190px
	.spacer		
		background marron
		display block
		height 1.5px
		margin 1em auto auto auto
		width 90%

.content
	padding-bottom 20px
	.about
		color rgba(black,0.4)
		font-family "mangal"
		margin-left 1em
		margin-right 1em
		text-align center
		h3
			color marron
			font-size 1.5em
			font-family "Pacifico"
		margin-bottom 50px
		p
			margin 0
			padding 0
	.banner
		margin-top 1em
		position relative
		
		img			
			height 400px
			width 100%
		.text
			font-family "Remachine"
			font-size 3em
			left 10%
			margin auto
			overflow hidden
			position absolute
			top 15%		
			width 80%
			p
				color white
				text-align center					
				text-shadow 2px 2px 10px rgba(black,0.8)

	.main-banner
		margin-top 1em
		overflow hidden
		img
			width 100%
	.contact
		margin auto
		overflow hidden
		text-align center
		text-size 2em
		color marron
		font-size 0.8em
		.izq 
		.der
			display inline-block
			margin 2em
			p
				font-family "mangalb"
			h2
				font-family "Heldustry"

		.izq
			text-align right
			margin-right 0

		.der
			text-align left	
			border-left solid 2px marron
			padding-left 2em

		.spacer		
			background marron
			display inline-block
			height 200px

.layerOpacity
	background rgba(0,0,0,0.89)
	background transparent\9
	color white
	display none
	font-size 'Heldustry'
	height 90%
	position fixed
	width 100%
	z-index 990
	font-size 1em
	vertical-align center	
	text-decoration none
	zoom 1
	.lista
		position relative
		width 80%
		left 10%
		top 0%
		li
			padding 0.4em
			list-style-type none
			margin-top 1em
			border-bottom solid 0.1em
			border-color white
			
			input
				-moz-border-radius 15px
				border-radius 15px
				background-image url(../img/lupa-busqueda.png)
				background-repeat no-repeat
				background-position right
				text-indent 10em
				&:active
				&:focus 
					background-image none
	.minus
		position absolute
		bottom -30px
		right 0


nav
	margin-top 2em
	position relative
	visibility hidden
	.menu
		position absolute
	.logo-fb
		position absolute
		margin-left 1em

.simple-menu
	visibility hidden
	position absolute
	margin-top 0.2em
	margin-left 0.2em

.overlay-menu
	visibility hidden
	position absolute
	right 0
	margin-top 0em
	margin-right 0em	

.nav-mobile
	display none
		

@media screen and (max-width:320px )
	.content
		.banner
			.text
				top 35%
				font-size 1.5em
			img 
				height 260px
				width 200%	

@media screen and (max-width:420px ) and (min-width:320px ) 
	.content
		.banner
			.text
				top 30%
				font-size 1.5em
			img 
				height 260px
				width 200%	

@media screen and (max-width:639px )
	.content
		.contact
			.izq
				border-right solid 2px marron
				padding-right 2em
		.main-banner
			margin-top 1em
			overflow hidden
		.banner
			img
				height 260px
				width 200%		

@media screen and (max-width:767px )
	.simple-menu
		visibility visible
	.overlay-menu
		visibility visible		
	.nav-mobile
		visibility visible	
	.content
		.main-banner
			margin-top 1em
			overflow hidden
		.banner
			img
				height 260px
				width 200%	
	

@media screen and (min-width: 768px)

	nav
		position relative
		visibility visible		
		.menu
			display block
			position absolute
			width 100%
			.menuIzquierda
			.menuDerecha		
				display inline-block
				padding 0
				position absolute
				width 40em				
				li				
					display inline-block
					a
						color marron
						font-size 1.2em
						text-decoration none
			.menuIzquierda
				font-family "Heldustry"
				margin-left 0
				margin-right 4em
				right 0
				text-align right
				li					
					&:nth-child(even)
						margin-left 2em
			.menuDerecha
				font-family "Heldustry"
				margin-left 4em
				margin-right 0
				text-align left
				li					
					&:nth-child(odd)
						margin-right 2em


	.content
		position relative
		
		.about
			padding-top 1em 
			padding-right 1em
			padding-left 1em
			background white
			bottom -30px
			font-size 0.8em
			left 13%
			margin auto
			overflow hidden
			padding-bottom 0
			position absolute
			width 75%

	footer
		margin-top 2em

@media screen and (min-width: 1024px)

	nav		
		.menu			
			.menuIzquierda
				margin-right 6em
				li					
					&:nth-child(even)
						margin-left 5em
			.menuDerecha
				margin-left 6em
				li					
					&:nth-child(odd)
						margin-right 5em

@media screen and (min-width: 1280px)

	nav		
		.menu			
			.menuIzquierda
				margin-right 8em
				li					
					&:nth-child(even)
						margin-left 7.5em
			.menuDerecha
				margin-left 8em
				li					
					&:nth-child(odd)
						margin-right 7.5em

@media screen and (min-width: 1440px)

	nav		
		.menu			
			.menuIzquierda
				margin-right 8em
				li					
					&:nth-child(even)
						margin-left 10em
			.menuDerecha
				margin-left 8em
				li					
					&:nth-child(odd)
						margin-right 10em
