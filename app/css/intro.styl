marron = #7d6350

@font-face {
	font-family: 'Heldustry';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/HeldustryFT_Regular.ttf') format('truetype');
}

@font-face {
	font-family: 'mangal';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/mangal.ttf') format('truetype');
}

@font-face {
	font-family: 'mangalb';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/mangalb.ttf') format('truetype');
}

@font-face {
	font-family: 'Pacifico';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/Pacifico.ttf') format('truetype');
}

@font-face {
	font-family: 'Remachine';
	font-style: normal;
	font-weight: normal;
	src:url('../fonts/RemachineScript.ttf') format('truetype');
}

body
	position absolute
	top 0
	bottom 0 
	right 0 
	left 0

.layerOpacity
	color white
	font-family 'Heldustry'
	height 100%
	position fixed
	width 100%
	z-index 990
	font-size 1.2em
	vertical-align center	
	text-decoration none
	zoom 1
	
	.info
		position relative
		width 50%
		left 25%
		top 20%
		.buttons
			text-align center
			margin-top 1em
			margin-bottom 1em
			text-decoration none
			color white			
			.registro
			.saltar
				margin-right 2em
				display inline-block
				border solid white 0.1em
				padding 0.4em
				width 20% 
				text-align center
				font-size 0.8em
				a
					&:link
					&:hover
					&:visited
					&:active
						color white
						text-decoration none
		.logo
			margin-left 20%
			margin-bottom 2em
		.text
		.footer
			text-align center
		.footer
			font-family 'Pacifico'


			

.image
	width 100%
	height 100%
	img
		width 100%
		height 100%

@media screen and (max-width:320px )
	.layerOpacity
		font-size 14px
		.info
			left 0
			.buttons
				.registro
				.saltar
					font-size 10px
					border none
			.logo
				block inline-block
				text-align center
				margin-left 0
				img
					width 159px

			

@media screen and (max-width:420px ) and (min-width:320px ) 
	.layerOpacity
		font-size 15px
		.info
			left 10%
			.buttons
				.registro
				.saltar
					font-size 10px
			.logo
				text-align center
				margin-left 0
				img
					width 180px



@media screen and (max-width:639px )
	font-size 0.7em
	.layerOpacity
		.info
			left 15%
			.buttons
				.registro
				.saltar
					font-size 10px
			.logo
				text-align center
				margin-left 0
				img
					width 200px
		

@media screen and (max-width:767px )
	font-size 0.8em
	.layerOpacity
		.info
			left 20%


@media screen and (min-width: 768px)
	font-size 0.8em
	.layerOpacity
		.info
			left 25%
