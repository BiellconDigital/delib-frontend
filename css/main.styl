marron = #7d6350

@font-face {
	font-family: 'Heldustry';
	src:url('../fonts/HeldustryFT_Regular.ttf') format('truetype');
	font-weight: normal;
	font-style: normal;
}

@font-face {
	font-family: 'mangal';
	src:url('../fonts/mangal.ttf') format('truetype');
	font-weight: normal;
	font-style: normal;
}

@font-face {
	font-family: 'mangalb';
	src:url('../fonts/mangalb.ttf') format('truetype');
	font-weight: normal;
	font-style: normal;
}

@font-face {
	font-family: 'Pacifico';
	src:url('../fonts/Pacifico.ttf') format('truetype');
	font-weight: normal;
	font-style: normal;
}

@font-face {
	font-family: 'Remachine';
	src:url('../fonts/RemachineScript.ttf') format('truetype');
	font-weight: normal;
	font-style: normal;
}


footer
	background marron
	color white
	padding 0.2em 0
	text-align center
	width 100%
	h3
		font-size 14px
		font-weight normal
		strong
			display block

header
	
	.logo
		margin-top 1.1em
		img
			display block
			margin auto
			width 190px
	.spacer		
		background marron
		height 1.5px
		width 90%
		margin 1em auto auto auto
		display block

.content
	.about
		margin-left 1em
		margin-right 1em
		text-align center
		font-family "mangal"
		color rgba(black,0.4)
		h3
			font-family "Pacifico"
			color marron
	.banner
		margin-top 1em
		position relative
		
		img
			width 100%
		.text
			font-family "Remachine"
			overflow hidden
			top 15%		
			left 10%
			position absolute
			width 80%
			margin auto
			font-size 3em
			p
				text-align center					
				color white
				text-shadow 2px 2px 10px rgba(black,0.8)
					

nav
	position relative
	visibility hidden
	.menu
		position absolute

@media screen and (max-width:320px )
	.content
		.banner
			.text
				top 5%
				font-size 1.5em	

@media screen and (max-width:420px ) and (min-width:320px ) 
	.content
		.banner
			.text
				top 20
				font-size 1.5em		
	

@media screen and (min-width: 768px)

	nav
		visibility visible		
		position relative
		.menu
			display block
			position absolute
			width 100%
			.menuIzquierda
			.menuDerecha		
				position absolute
				padding 0
				display inline-block
				width 40em				
				li				
					display inline-block
					a
						text-decoration none
						color marron
						font-size 1.2em
			.menuIzquierda
				right 0
				text-align right
				font-family "Heldustry"
				margin-right 4em
				margin-left 0
				li					
					&:nth-child(even)
						margin-left 2em
			.menuDerecha
				text-align left
				font-family "Heldustry"
				margin-left 4em
				margin-right 0
				li					
					&:nth-child(odd)
						margin-right 2em


	.content
		position relative
		
		.about
			padding-bottom 0
			background white
			overflow hidden
			left 10%
			bottom -30px
			position absolute
			width 80%
			margin auto
			font-size 0.8em

	footer
		margin-top 2em

@media screen and (min-width: 1024px)

	nav		
		.menu			
			.menuIzquierda
				margin-right 6em
				li					
					&:nth-child(even)
						margin-left 5em
			.menuDerecha
				margin-left 6em
				li					
					&:nth-child(odd)
						margin-right 5em

@media screen and (min-width: 1280px)

	nav		
		.menu			
			.menuIzquierda
				margin-right 8em
				li					
					&:nth-child(even)
						margin-left 7.5em
			.menuDerecha
				margin-left 8em
				li					
					&:nth-child(odd)
						margin-right 7.5em

@media screen and (min-width: 1440px)

	nav		
		.menu			
			.menuIzquierda
				margin-right 8em
				li					
					&:nth-child(even)
						margin-left 10em
			.menuDerecha
				margin-left 8em
				li					
					&:nth-child(odd)
						margin-right 10em
