marron = #7d6350

footer
	background marron
	color white
	padding 0.2em 0
	text-align center
	width 100%
	h3
		font-size 14px
		font-weight normal
		strong
			display block

header
	
	.logo
		margin-top 1.1em
		img
			display block
			margin auto
			width 230px
	.spacer		
		background marron
		height 1.5px
		width 90%
		margin 1em auto auto auto
		display block

.content
	.about
		margin-left 1em
		margin-right 1em
		text-align center
		h3
			color marron
	.banner
		margin-top 1em
		position relative
		
		img
			width 100%
		.text
			overflow hidden
			top 25%		
			left 10%
			position absolute
			width 80%
			margin auto
			font-size 1.5em
			p
				text-align center					
				color white
				text-shadow 2px 2px 10px rgba(black,0.8)
				font-weight bold
				

nav
	position relative
	visibility hidden
	.menu
		position absolute	
	

@media screen and (min-width: 768px)

	nav
		visibility visible
		position relative
		.menu
			position absolute
			
			li							
				margin-right 2em
				margin-left 2em
				display inline-block
				a
					text-decoration none
					color marron
					font-size 30px
	.content
		position relative
		
		.about
			padding-bottom 0
			background white
			overflow hidden
			left 10%
			bottom -30px
			position absolute
			width 80%
			margin auto
			font-size 0.8em

	footer
		margin-top 2em
